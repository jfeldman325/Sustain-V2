#main.container
  %h3.header.centered Edit your profile
  =form_for @person, :method => :patch,html: {class: 'form-horizontal'} do |f|
    .form-group
      =f.label :first_name, 'First Name'
      =f.text_field :first_name, class: "form-control"

    .form-group
      =f.label :last_name, 'Last Name'
      =f.text_field :last_name, class: "form-control"

    .form-group
      =f.label :role, 'What do you do at Colgate?'
      =f.select :role, options_for_select(@roles, @person.role),{},class: "form-control"

    .field
      =f.label :image, 'Image'
      =f.file_field :image, accept: "image/png,image/gif,image/jpeg"

    .form-group
      =f.submit 'Update user profile',class: "btn-success"

  %p= link_to "Cancel", person_path(@person.id)
  %br
