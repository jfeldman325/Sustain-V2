#main.container
  %h3.tierheader Sustainability Champions: <small>(14+ Points)</small>
  %table.champions_table.table
    %thead
      %tr
        %th{:style => "width: 20%"} Rank
        %th{:style => "width: 60%"} Name
        %th{:style => "width: 20%"} Points

    %tbody
      -@champions.each_with_index do |u, index|
        %tr
          %td.place= "#{(index + 1).to_s + "."}"
          %td.name= "#{u.name}"
          %td.points= "#{u.tpoints}"
  %br

  %h3.tierheader Sustainability Advocates: <small>(10-13 Points)</small>
  %table.advocates_table.table
    %thead
      %tr
        %th{:style => "width: 20%"} Rank
        %th{:style => "width: 60%"} Name
        %th{:style => "width: 20%"} Points

    %tbody
      -@advocates.each_with_index do |u, index|
        %tr
          %td.place= "#{(index + 1 + @champions.length).to_s + "."}"
          %td.name= "#{u.name}"
          %td.points= "#{u.tpoints}"
  %br

  %h3.tierheader Sustainability Associates: <small>(6-9 Points)</small>
  %table.associates_table.table
    %thead
      %tr
        %th{:style => "width: 20%"} Rank
        %th{:style => "width: 60%"} Name
        %th{:style => "width: 20%"} Points

    %tbody
      -@associates.each_with_index do |u, index|
        %tr
          %td.place= "#{(index + 1 + @champions.length + @advocates.length).to_s + "."}"
          %td.name= "#{u.name}"
          %td.points= "#{u.tpoints}"
  %br
