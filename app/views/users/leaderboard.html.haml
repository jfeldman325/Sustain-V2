#main.container
  %h3.header.text-center Passport Points Leaderboard
  %h3.tierheader Sustainability Champions: <small>(14+ Points)</small>
  %table.table.table-responsive.table-bordered
    %col.col1
    %col.col2
    %col.col3
    %thead.thead-light
      %tr
        %th.col1 Rank
        %th.col2 Name
        %th.col3 Points

    %tbody
      -@champions.each_with_index do |u, index|
        %tr.tablecontents
          %td.place= "#{(index + 1).to_s + "."}"
          %td.name= link_to "#{u.name}", user_path(u), class: "nav-link nav-item"
          %td.points= "#{u.tpoints}"
  %br

