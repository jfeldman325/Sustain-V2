#main.container
  %h3.header Participants for #{@event.title}

  %table.participants_table
    %thead
      %tr
        %th Name
        %th Classification

    %tbody
      -@participants.each do |p|
        %tr.participant
          %td.name= link_to "#{p.user.name}", user_path(p.user)
          %td.classification= "#{p.user.classification.capitalize}"

  %p= link_to "Back to Event", event_path(@event)
