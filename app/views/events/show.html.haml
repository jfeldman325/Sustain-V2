#main.container
  %h1.header #{@event.title}
  %td.image= image_tag @event.image.url
  %h5.dl
    %h5.dl Date and Time:
  - @event.occurrences.each do |occurence|
    %h6.dd #{occurence.date_time.to_formatted_s(:custom_long_ordinal)}
  %h5.dl Location: #{@event.location}
  %h5.dl Recurring Event? #{@event.recurring ? "Yes" : "No"}
  %h5.dl Points Value: #{@event.points}
  %h5.dl About #{@event.title}:
  %h6.dd #{@event.description}

  %p=link_to 'Register for this Event', event_registrees_path(@event),:method => :post, class: "nav-link nav-item"
  %p=link_to "View Registrees", event_registrees_path(@event), class: "nav-link nav-item"
  -if check_admin
    %p=link_to 'Edit event details', edit_event_path(@event), class: "nav-link nav-item"
    %p=link_to 'Delete event', event_path(@event), :method => :delete, class: "nav-link nav-item"
