!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Colgate Sustainability Passport Program
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    = favicon_link_tag 'favicon.ico'
  %body
    #header
    %h3.title Colgate Sustainability Passport Program
    %div.pull_right
      -if current_person
        =  "Signed in as #{current_person.first_name} #{current_person.last_name}"
        =link_to "Sign out", signout_path, id:"sign_out"
      -else
        =link_to "Sign in with Google",person_google_oauth2_omniauth_authorize_path
    %div.navbar.navbar-light.bg-light
      %a.navbar-brand{ :href => root_path}= image_tag("sus_logo.jpg", :height => 50)
      = link_to "All Events", meetings_path, class: "nav-link nav-item"
      .nav-link= link_to "About the Program", about_path




      -#if user_signed_in?
        -# do domethins
      -#else
        -# do somethins else
    -if flash[:notice] || flash[:error] || flash[:alert]
      .flash
        -if flash[:notice]
          .alert.alert-info= flash[:notice]
        -if flash[:error]
          .alert.alert-danger= flash[:error]
        -if flash[:alert]
          .alert.alert-warning= flash[:alert]
    = yield
    %footer.fixed-bottom.green-background
      %div.footer.text-center
        %f.main Colgate Sustainability Passport Program
        %br
        %f= link_to "Home", meetings_path, {:class => "text-white"}
        %f.text-white •
        %f= link_to "About Us", about_path, {:class => "text-white"}
        %f.text-white •
        %f= link_to "Contact Us", contact_path, {:class => "text-white"}
